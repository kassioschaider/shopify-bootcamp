//Variables
//--------------------------------------------------------------------------------------------

//Colors
$color-border: #CCC;
$color-black: #000;
$color-black-focus: #444;
$color-white: #FFF;
$color-pink: #ED1E7A;
$color-pink-focus: #C01561;

//Backgrounds
$color-body: {{ settings.color_body_bg }};

//Header
$header-mobile-hight: 56px;

//Fonts
//--------------------------------------------------------------------------------------------

@font-face {
    font-family: 'Palanquin';
    src: url('{{ "Palanquin-Regular.eot" | asset_url}}');
    src: url('{{ "Palanquin-Regular.eot?#iefix" | asset_url}}') format('embedded-opentype'),
        url('{{ "Palanquin-Regular.woff2" | asset_url}}') format('woff2'),
        url('{{ "Palanquin-Regular.woff" | asset_url}}') format('woff'),
        url('{{ "Palanquin-Regular.ttf" | asset_url}}') format('truetype'),
        url('{{ "Palanquin-Regular.svg#Palanquin-Regular" asset_url}}') format('svg');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
}

@font-face {
    font-family: 'Playfair Display';
    src: url('PlayfairDisplay-Regular.eot');
    src: url('PlayfairDisplay-Regular.eot?#iefix') format('embedded-opentype'),
        url('PlayfairDisplay-Regular.woff2') format('woff2'),
        url('PlayfairDisplay-Regular.woff') format('woff'),
        url('PlayfairDisplay-Regular.ttf') format('truetype'),
        url('PlayfairDisplay-Regular.svg#PlayfairDisplay-Regular') format('svg');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
}

@font-face {
    font-family: 'Nunito';
    src: url('Nunito-Regular.woff2') format('woff2'),
        url('Nunito-Regular.woff') format('woff');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
}

