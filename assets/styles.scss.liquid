//Headings
//--------------------------------------------------------------------------------------------
h1, h2, h3, h4, h5, h6 {
    font-style: normal;
    font-weight: bold;
    margin: 0 0 16px 0;
    padding: 0;
}

h1 {
    font-size: 32px;
    line-height: 40px;
}

h2 {
    font-size: 24px;
    line-height: 32px;
}

h3 {
    font-size: 16px;
    line-height: 24px;
}

h4, h5, h6 {
    font-size: 16px;
    line-height: 16px;
}

.h1-serif,
.h2-serif,
.h3-serif,
.h4-serif,
.h5-serif,
.h6-serif {
    font-family: 'Playfair Display';
}

.heading-uppercase {
    font-weight: bold;
    font-size: 24px;
    line-height: 32px;
    letter-spacing: 0.1em;
    text-transform: uppercase;
}