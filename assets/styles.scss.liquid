//Body
//--------------------------------------------------------------------------------------------

body {
    font-size: 16px;
    line-height: 24px;
    color: $color-black;
    background: $color-white;
}

//Headings
//--------------------------------------------------------------------------------------------

h1, h2, h3, h4, h5, h6 {
    font-style: normal;
    font-weight: bold;
    margin: 0 0 16px 0;
    padding: 0;
}

h1 {
    font-size: 32px;
    line-height: 40px;
}

h2 {
    font-size: 24px;
    line-height: 32px;
}

h3 {
    font-size: 16px;
    line-height: 24px;
}

h4, h5, h6 {
    font-size: 16px;
    line-height: 16px;
}

.h1-serif,
.h2-serif,
.h3-serif,
.h4-serif,
.h5-serif,
.h6-serif {
    font-family: 'Playfair Display';
}

.heading-uppercase {
    font-weight: bold;
    letter-spacing: 0.1em;
    text-transform: uppercase;
}

h1.heading-uppercase {
    font-size: 24px;
    line-height: 32px;
}

h2.heading-uppercase {
    font-size: 16px;
    line-height: 24px;
}

.heading-uppercase-small {
    font-weight: bold;
    font-size: 12px;
    line-height: 16px;
    letter-spacing: 0.1em;
    text-transform: uppercase;
}

//Typograph
//--------------------------------------------------------------------------------------------

p {
    font-size: 16px;
    line-height: 24px;
    margin-bottom: 16px;
}

.crossed-text {
    font-size: 16px;
    line-height: 24px;
    text-decoration-line: line-through;
    color: $color-border;
}

.mini-text {
    font-size: 12px;
    line-height: 16px;
}

.mini-text-uppercase {
    font-size: 12px;
    line-height: 16px;
    text-transform: uppercase;
}

//Icons
//--------------------------------------------------------------------------------------------

.icon {
    width: auto;
    height: 24px;
}

//Buttons
//--------------------------------------------------------------------------------------------

button,
.btn {
    height: 48px;
    color: $color-white;
    background: $color-black;
    padding: 12px 20px;
    font-size: 14px;
    line-height: 24px;
    text-transform: uppercase;
    font-weight: normal;
    border: 0;
    border-radius: 0;

    &:focus {
        background: $color-black-focus;
        border-radius: 0;
    }
}

.btn-small {
    height: 40px;
    padding-top: 8px;
    padding-bottom: 8px;
}

.btn-large {
    height: 56px;
    padding-top: 16px;
    padding-bottom: 16px;
}

.btn-pink:not([disabled]),
.btn-pink {
    background-color: $color-pink;

    &:hover,
    &:active,
    &:focus {
        background-color: $color-pink-focus;
    }
}

.btn-ghost:not([disabled]),
.btn-ghost {
    background-color: transparent;
    outline: 1px solid $color-white;
    outline-offset: -1px;

    &:hover,
    &:active,
    &:focus {
        background-color: $color-black-focus;
        outline-offset: -4px;
        outline-width: 4px;
    }
}

.btn-ghost-black:not([disabled]),
.btn-ghost-black {
    color: $color-black;
    outline-color: $color-black;

    &:hover,
    &:active,
    &:focus {
        color: $color-black;
        outline-color: $color-black;
        background-color: transparent;
    }
}

//Badge
//--------------------------------------------------------------------------------------------

.badge {
    background: $color-pink;
    border-radius: 5px;
    color: $color-white;
    padding: 4px 5px;
    @extend .mini-text-uppercase;
}

//Forms
//--------------------------------------------------------------------------------------------

label {
    @extend .mini-text-uppercase;
}

select,
input {
    padding: 8px 10px;
    height: 40px;
    border: 0;
    font-size: 16px;
    line-height: 24px;
    color: $color-black;
    outline: 1px solid $color-border;

    &:focus {
        outline-color: $color-black;
    }
}

select {
    padding-right: 40px;
}

//Minicart
//--------------------------------------------------------------------------------------------

.minicart-trigger {

    .badge {
        line-height: 16px;
        margin-right: 5px;
        padding: 4px 2px 4px 5px;
    }
}

// Page
// -----------------------------------------------------------

.page-container {
    padding-top: $header-mobile-hight;
}

// Header
// -----------------------------------------------------------

.site-header__logo {
    margin: 0px;
}

.site-header__logo-image {

    img {
        // height: 40px;
    }
}

.site-header__logo-wrapper {
    width: auto;
}

.site-header {
    height: $header-mobile-hight;
    background: $color-body;
    position: fixed;
    width: 100%;
    z-index: 999;
    padding: 15px 20px;
}

.site-header__icon {
    padding: 0;
    height: 24px;
    width: 24px;

    &.site-header__menu {
        margin-left: 20px;
    }

    &.site-header__cart {
        margin-left: 20px;
    }

    &.site-header__account {
        margin-left: 15px;
    }
}

// Announcement Bar
// -----------------------------------------------------------

.announcement-bar {
    display: none;
}

// Hero

.mega-title {
    font-family: 'Nunito' !important;
    font-style: normal;
    font-weight: bold;
    font-size: 32px;
    line-height: 40px;
    text-align: center;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-bottom: 0px;
    text-shadow: none;
}

.hero__overlay::before {
    background-color: transparent;
}

.hero-text-padding-adjust {
    padding: 224px 81px 0px 80px;
}

.hero__btn {
    margin-top: 28px;
}
